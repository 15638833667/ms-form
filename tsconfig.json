{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.vue",
    "packages/**/*.tsx",
    "src/**/*.tsx",
    "shims-tsx.d.ts"
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "images/*": ["./src/assets/images"]
    },
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node"
  },
}
